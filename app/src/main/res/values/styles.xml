<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan_500</item>
        <item name="colorPrimaryDark">@color/cyan_700</item>
        <item name="colorAccent">@color/red_a200</item>
    </style>

    <!-- Style for tabs in the Main Screen -->
    <style name="MainScreenTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <!-- Gridlayout TextView style-->
    <style name="GridLayoutTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical|left|start</item>
        <item name="android:paddingBottom">@dimen/margin_12dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <!-- Location detail TextView -->
    <style name="LocationDetailTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_16dp</item>
        <item name="android:paddingStart">@dimen/margin_16dp</item>
        <item name="android:paddingRight">@dimen/margin_16dp</item>
        <item name="android:paddingEnd">@dimen/margin_16dp</item>
    </style>

    <!-- Pastor Image CardView -->
    <style name="PastorImageCardView">
        <item name="android:layout_width">@dimen/pastor_image_size</item>
        <item name="android:layout_height">@dimen/pastor_image_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_12dp</item>
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
        <item name="cardCornerRadius">@dimen/pastor_cardview_corner_radius</item>
    </style>

    <!-- Pastor ImageView -->
    <style name="PastorImageView">
        <item name="android:layout_width">@dimen/pastor_image_size</item>
        <item name="android:layout_height">@dimen/pastor_image_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
